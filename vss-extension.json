{
  "manifestVersion": 1,
  "id": "Sheriff",
  "name": "Sheriff",
  "publisher": "gofrontier",
  "version": "",
  "public": false,
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "description": "An Azure DevOps extension to simplify use of Sheriff, a command line tool to manage Azure role-based access control (Azure RBAC) and Microsoft Entra ID Privileged Identity Management (Microsoft Entra ID PIM) using desired state configuration.",
  "tags": [
    "Azure RBAC",
    "Microsoft Entra ID",
    "Privileged Identity Management"
  ],
  "repository": {
    "type": "git",
    "uri": "https://github.com/gofrontier-com/sheriff-azure-devops-extension"
  },
  "content": {
    "details": {
      "path": "overview.md"
    }
  },
  "links": {
    "learn": {
      "uri": "https://github.com/gofrontier-com/sheriff"
    }
  },
  "icons": {
    "default": "images/extension-icon.png"
  },
  "files": [
    {
      "path": "tasks/InstallSheriffCLI"
    },
    {
      "path": "tasks/SheriffApply"
    },
    {
      "path": "tasks/SheriffPlan"
    }
  ],
  "contributions": [
    {
      "id": "install-sheriff-cli",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "tasks/InstallSheriffCLI"
      }
    },
    {
      "id": "sheriff-apply",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "tasks/SheriffApply"
      }
    },
    {
      "id": "sheriff-plan",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "tasks/SheriffPlan"
      }
    }
  ]
}
